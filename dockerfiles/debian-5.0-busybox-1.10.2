FROM lpenz/debian-lenny-i386
ENV SH="busybox ash" DEBIAN_FRONTEND=noninteractive DEBCONF_NOWARNINGS=yes
RUN apt-get update && apt-get -y --force-yes install busybox

RUN apt-get update && apt-get install -y --force-yes sudo \
 && echo "ALL ALL=(ALL) NOPASSWD: ALL" > /etc/sudoers \
 && adduser --disabled-password --gecos "" user
USER user

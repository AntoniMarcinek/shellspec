FROM buildpack-deps
ENV SH="pbosh" DEBIAN_FRONTEND=noninteractive DEBCONF_NOWARNINGS=yes
RUN apt-get update && apt-get install -y netcat-openbsd

ARG schily=schily-2018-10-30
RUN wget -nv -O- --trust-server-names https://sourceforge.net/projects/schilytools/files/${schily}.tar.bz2/download | tar xfj - \
 && cd ${schily} && make install
ENV PATH="/opt/schily/bin:$PATH"

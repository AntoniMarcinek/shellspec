# Unsupported: built-in commands can not redefine.
FROM lpenz/debian-etch-i386
RUN export DEBIAN_FRONTEND=noninteractive DEBCONF_NOWARNINGS=yes \
 && apt-get update && apt-get -y install sudo busybox \
 && echo "ALL ALL=(ALL) NOPASSWD: ALL" > /etc/sudoers \
 && adduser --disabled-password --gecos "" user
USER user
ENV SH="busybox ash"

FROM buildpack-deps
RUN VERSION=schily-2019-03-11 \
 && URL=https://sourceforge.net/projects/schilytools/files/$VERSION.tar.bz2/download \
 && wget -nv -O- --trust-server-names "$URL" | tar xfj - \
 && cd $VERSION && make install \
 && export DEBIAN_FRONTEND=noninteractive DEBCONF_NOWARNINGS=yes \
 && apt-get update && apt-get install -y sudo \
 && echo "ALL ALL=(ALL) NOPASSWD: ALL" > /etc/sudoers \
 && useradd -m user
USER user
ENV SH="bosh" PATH="/opt/schily/bin:$PATH"

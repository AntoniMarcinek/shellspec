FROM lpenz/debian-potato-i386

ENV DEBIAN_FRONTEND noninteractive
ENV DEBCONF_NOWARNINGS yes

RUN apt-get update && apt-get -y --force-yes install zsh \
 && apt-get clean && rm -rf /var/lib/apt/lists/*
RUN uname -a && cat /etc/debian_version && dpkg -l zsh

WORKDIR /shellspec
COPY ./ ./
CMD [ "./shellspec", "--shell", "zsh" ]
